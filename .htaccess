<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Use passenger (Hostinger standard) or proxy to local port if passenger not active
    # But usually just setting the start file is enough.
    # This rule simply says: "If it's not a real file, send to server.js"
    
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ server.js [QSA,L]
</IfModule>
